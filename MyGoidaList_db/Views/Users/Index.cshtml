@model IEnumerable<MyGoidaList.Models.User>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New User", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nickname)</th>
            <th>@Html.DisplayNameFor(model => model.TitlesSum)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Nickname</td>
                <td>@user.TitlesSum</td>6
                <td>
                    <a href="@Url.Action("Index", "UserTitle", new { userId = user.Id })">
                        View Titles
                    </a> |
                    @Html.ActionLink("Edit", "Edit", new { id = user.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = user.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
